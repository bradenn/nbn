<!DOCTYPE html>
<html lang="en" <% if(user != null){ %>data-theme="<%= user.theme %>" <% }else{ %> data-theme="dark" <% } %>>
<%- include("partials/header.ejs"); %>

<body>
  <%- include("partials/nav.ejs"); %>
  <div class="container" style="margin-top:23px;">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h5 class="text-white">New Topic</h5>
        <div class="card" style="">
          <div class="card-body">
            <form method="post" action="/new/topic">
              <div class="form-group">
                <input readonly onfocus="if (this.hasAttribute('readonly')) {
    this.removeAttribute('readonly');
    this.blur();    this.focus();  }" type="text" class="form-control" id="title" name="title" placeholder="Title">
              </div>
              <div class="form-group">
                <textarea rows="4" class="form-control" placeholder="Post" eadonly name="body" onfocus="if (this.hasAttribute('readonly')) {
    this.removeAttribute('readonly');
    this.blur();    this.focus();  }"></textarea>
                </div>
              <button type="submit" class="btn btn-primary">Submit</button>
              <small class="text-warning"><% if(typeof error != 'undefined'){ if(error.type == "login"){ %> <%= error.message %> <% } } %></small>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</body>

</html>
