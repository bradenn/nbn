<head>
    <% if(typeof post != 'undefined'){ %>
        <title><%= post.title %></title>
    <% }else{ %>
        <title>Namebrand</title>
    <% } %>
    <script type="application/ld+json">
        {
            "@context": "https://schema.org/",
            "@type": "WebSite",
            "name": "Name Brand News",
            "description": "Name Brand News is a place for Gen-Z written news and opionions",
            "url": "https://namebrandnews.com",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "https://namebrandnews.com/search/?q={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }
    </script>

    <% if(typeof post != "undefined"){ %>
        <script type="application/ld+json">
    { "@context": "https://schema.org",
     "@type": "Article",
     "headline": "<%= post.title %>",
     "image": "<%= post.picture %>",
     "author": "<%= post.owner.firstname %> <%= post.owner.lastname %>",
     "genre": "<%= post.section %>",
     "keywords": "<%= post.tags.join(' ') %>",
    "publisher": {
        "@type": "Organization",
        "name": "Name Brand News",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.namebrandnews.com/images/logo.png"
        }
      },
     "url": "https://namebrandnews.com/post/<%= post._id %>",
     "datePublished": "<%= post.date %>",
     "description": "<%= post.desc %>",
     "articleBody": "<%= post.body %>"
     }
        </script>

            <meta property="og:locale" content="en_US" />
            <meta property="og:type" content="article" />
            <meta property="og:title" content="<%= post.title %>" />
            <meta property="og:description" content="<%= post.desc %>" />
            <meta property="og:url" content="https://namebrandnews.com/post/<%= post._id %>" />
            <meta property="og:site_name" content="Name Brand News" />
            <meta property="article:section" content="<%= post.section %>" />
            <meta property="article:published_time" content="<%= post.date %>" />
            <meta property="og:image" content="<%= post.picture %>" />
    <% }else{ %>
            <meta property="og:locale" content="en_US" />
            <meta property="og:type" content="website" />
            <meta property="og:title" content="Name Brand News" />
            <meta property="og:description" content="Official Site" />
            <meta property="og:url" content="https://namebrandnews.com" />
            <meta property="og:site_name" content="Name Brand News" />
        <% } %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/bootstrap.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/custom.css?ver=2.1.4">
    <script src="https://kit.fontawesome.com/4a4edf243a.js"></script>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:300,400,500,600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Teko:500&display=swap" rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-146403582-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-146403582-1');
    </script>

</head>

