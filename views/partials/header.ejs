<head>
  <% if(typeof topic != 'undefined'){ %>
  <title><%= topic.title %></title>
  <% }else{ %>
  <title><%= title %></title>
  <% } %>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "WebSite",
      "name": "Name Brand News",
      "url": "https://namebrandnews.com",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://namebrandnews.com/search/?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <% if(typeof topic != "undefined"){ %>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://namebrandnews.com/topic/{topic}"
      },
      "headline": "<%= topic.title %>",
      "description": "<%= topic.body %>",
      "image": {
        "@type": "ImageObject",
        "url": "<%= topic.picture %>",
        "width": ,
        "height":
      },
      "author": {
        "@type": "Person",
        "name": "<%= topic.owner.username %>"
      },
      "publisher": {
        "@type": "Organization",
        "name": "NameBrandNews"
      },
      "datePublished": "<%= topic.date %>"
    }
  </script>
  <% } %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/css/bootstrap.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/custom.css">
  <script src="https://kit.fontawesome.com/4a4edf243a.js"></script>
  <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,500,600&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Round" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Teko:500&display=swap" rel="stylesheet">
  <script src="/js/jquery.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-146403582-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'UA-146403582-1');
  </script>

</head>
